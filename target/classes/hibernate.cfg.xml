<hibernate-configuration>
<session-factory>
<!-- Conexión JDBC a MySQL en Docker -->
<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dragolandia</property>
<property name="hibernate.connection.username">dam2user</property>
<property name="hibernate.connection.password">1234..</property>
<!-- Dialecto de MySQL -->
<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
<!-- Configuraciones de Hibernate -->
<property name="hibernate.hbm2ddl.auto">update</property>
<!--
 Hibernate crea/actualiza automaticamente las tablas 
-->
<property name="hibernate.show_sql">true</property>
<property name="hibernate.format_sql">true</property>
<!--
 Para que funcione el método getCurrentSession en el aula 21 
-->
<property name="hibernate.current_session_context_class">thread</property>
<!-- Registrar entidades -->
<mapping class="com.bosque.modelos.Bosque"/>
<mapping class="com.bosque.modelos.Dragon"/>
<mapping class="com.bosque.modelos.Hechizo"/>
<mapping class="com.bosque.modelos.Mago"/>
<mapping class="com.bosque.modelos.Monstro"/>
</session-factory>
</hibernate-configuration>